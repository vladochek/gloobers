function user_register() {
	global $user,$base_url;
	if(!$user->uid){
		$user_register_form = drupal_get_form('user_register_form');
		return theme( 'user_register', array( 'user_register_form' => $user_register_form ) );
	}else{
		drupal_goto();
	}	
}
