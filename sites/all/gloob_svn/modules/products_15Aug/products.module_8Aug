function getAmentiesdata($type=null)
{

$amentiestype=array();
$query=db_select('gbl_amenties_meta','gme')
       ->fields('gme')
	   ->condition('status','1','=');
	if($type!=null)
	{
	$query->condition('amenties_type',$type,'like');
	}	   
	$result=$query->execute();	
	while($data=$result->fetchAssoc())
	{	
	$amentiestype[]=$data;
	}	   
return $amentiestype;
}
